from tkinter import *

Text = ("helvetic", 13)
Texttitre = ("helvetic",25)
fenetre = Tk()
fenetre.geometry("854x580")


def fenetre_jouer_menu():
    win = Toplevel()
    Titre2 = "Synapse"
    Label(win, text=Titre2, font=Texttitre).pack()      #def de la fenetre n2

    Button(win,text="Quitter",command=win.destroy,font=Text).pack()
    win.geometry("854x580")






def fenetre_principale():
    Titre1 = "Synapse"
    Label(fenetre, text=Titre1, font=Texttitre).pack()
    jouer = Button(fenetre, text="Jouer", command=fenetre_jouer_menu,font=Text,width=30,height=1).pack()
    #mess = "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
    #Label(fenetre,text=mess,font=Texttitre).pack()
    Quit = Button(fenetre,text="Quitter",command=fenetre.destroy, font=Text,width=30,height=1).pack()
    return fenetre_principale

fenetre_principale()
